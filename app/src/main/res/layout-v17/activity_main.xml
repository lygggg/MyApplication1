<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/yogiyo">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_maps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치설정"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재시간: "/>
           <TextClock
               android:id="@+id/clock"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:format12Hour="hh:mm"
               android:layout_gravity="center"
               />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="3.4"
            android:orientation="horizontal">
<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_main_pizza"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:src="@drawable/pizza" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:text="피자" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_main_chinafood"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:src="@drawable/chinafood" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:text="중국집" />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:orientation="vertical">


                <ImageView
                    android:id="@+id/btn_main_chicken"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:src="@drawable/kkokko" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:text="치킨" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="3.4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_main_bunsik"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:src="@drawable/bunsik" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:text="분식" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_main_hansik"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:src="@drawable/hansik" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:text="한식" />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:orientation="vertical">


                <ImageView
                    android:id="@+id/btn_main_jokbal"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:src="@drawable/jokbal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:text="족발" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="3.4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_main_sushi"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:src="@drawable/sushi" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:text="일식" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_main_bugur"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:src="@drawable/fastfood" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:text="햄버거" />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:orientation="vertical">


                <ImageView
                    android:id="@+id/btn_main_desert"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:src="@drawable/bingsu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:text="디저트" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="5"
            android:weightSum="4"
            android:orientation="horizontal"
            android:background="#D8D8D8">
            <ImageButton
                android:id="@+id/btn_main_home"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/home" />

            <ImageButton
                android:id="@+id/btn_main_search"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/search" />

            <ImageButton
                android:id="@+id/btn_main_buylist"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/list" />
            <ImageButton
                android:id="@+id/btn_main_myyogiyo"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/face" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>